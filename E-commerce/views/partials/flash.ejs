<% if(success && success.length){ %>
    <!-- Modal -->
    <div class="modal fade" id="statusModalSuccess" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="statusModalLabelSuccess" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h1 class="modal-title fs-5" id="statusModalLabelSuccess">Status</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex align-items-center">
                        <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Success:" style="width: 1.5rem; height: 1.5rem;">
                            <use xlink:href="#check-circle-fill"/>
                        </svg>
                        <strong><%=success%></strong>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const successModal = new bootstrap.Modal(document.getElementById('statusModalSuccess'));
            successModal.show();
        });
    </script>
<% } %>
        
<% if(error && error.length){ %>
    <!-- Modal -->
    <div class="modal fade" id="statusModalError" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="statusModalLabelError" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h1 class="modal-title fs-5" id="statusModalLabelError">Error</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex align-items-center">
                        <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Danger:" style="width: 1.5rem; height: 1.5rem;">
                            <use xlink:href="#exclamation-triangle-fill"/>
                        </svg>
                        <strong><%=error%></strong>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const errorModal = new bootstrap.Modal(document.getElementById('statusModalError'));
            errorModal.show();
        });
    </script>
<% } %>