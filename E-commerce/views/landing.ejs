<% layout('layouts/boiler-plate') %>

<style>
.hero-section {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.9) 0%, rgba(118, 75, 162, 0.9) 100%), 
                url('https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2340&q=80');
    background-size: cover;
    background-position: center;
    color: white;
    padding: 120px 0;
    text-align: center;
    position: relative;
}

.hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: 1;
}

.hero-content {
    position: relative;
    z-index: 2;
}

.hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 20px;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
}

.hero-subtitle {
    font-size: 1.3rem;
    margin-bottom: 40px;
    opacity: 0.95;
}

.hero-btn {
    padding: 15px 40px;
    font-size: 1.2rem;
    font-weight: 600;
    border-radius: 50px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}

.hero-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.3);
}

.features-section {
    padding: 80px 0;
    background-color: #f8f9fa;
}

.feature-card {
    text-align: center;
    padding: 40px 20px;
    border-radius: 15px;
    transition: transform 0.3s ease;
    height: 100%;
    background: white;
}

.feature-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.1);
}

.feature-icon {
    font-size: 3rem;
    margin-bottom: 20px;
    color: #667eea;
}

.featured-products {
    padding: 80px 0;
    background: linear-gradient(to bottom, #ffffff 0%, #f8f9fa 100%);
}

.section-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 60px;
    color: #333;
}

.product-card-landing {
    border-radius: 15px;
    overflow: hidden;
    transition: all 0.3s ease;
    border: none;
    box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    background: white;
}

.product-card-landing:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.15);
}

.product-img-landing {
    height: 200px;
    object-fit: cover;
    width: 100%;
}

.cta-section {
    background: linear-gradient(45deg, rgba(102, 126, 234, 0.9) 0%, rgba(118, 75, 162, 0.9) 100%),
                url('https://images.unsplash.com/photo-1607082348824-0a96f2a4b9da?ixlib=rb-4.0.3&auto=format&fit=crop&w=2340&q=80');
    background-size: cover;
    background-position: center;
    color: white;
    padding: 80px 0;
    text-align: center;
}

.stats-section {
    padding: 60px 0;
    background: white;
}

.stat-card {
    text-align: center;
    padding: 30px 15px;
}

.stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: #667eea;
    margin-bottom: 10px;
}

.stat-label {
    font-size: 1.1rem;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.category-showcase {
    padding: 80px 0;
    background: #f8f9fa;
}

.category-card {
    border-radius: 15px;
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
    height: 200px;
    margin-bottom: 30px;
}

.category-card:hover {
    transform: scale(1.05);
    box-shadow: 0 15px 35px rgba(0,0,0,0.2);
}

.category-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.category-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.3) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
}

.category-title {
    color: white;
    font-size: 1.5rem;
    font-weight: 700;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
}

@media (max-width: 768px) {
    .hero-title {
        font-size: 2.5rem;
    }
    
    .hero-subtitle {
        font-size: 1.1rem;
    }
}
</style>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container hero-content">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="hero-title">Welcome to Shopping App</h1>
                <p class="hero-subtitle">Discover amazing products at unbeatable prices. Shop with confidence and style.</p>
                <a href="/products" class="btn btn-light hero-btn">Start Shopping</a>
            </div>
        </div>
    </div>
</section>

<!-- Categories Showcase -->
<section class="category-showcase">
    <div class="container">
        <h2 class="section-title">Shop by Category</h2>
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="category-card">
                    <img src="https://images.unsplash.com/photo-1441986300917-64674bd600d8?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80" class="category-img" alt="Electronics">
                    <div class="category-overlay">
                        <h3 class="category-title">Electronics</h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="category-card">
                    <img src="https://images.unsplash.com/photo-1445205170230-053b83016050?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80" class="category-img" alt="Fashion">
                    <div class="category-overlay">
                        <h3 class="category-title">Fashion</h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="category-card">
                    <img src="https://images.unsplash.com/photo-1586023492125-27b2c045efd7?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80" class="category-img" alt="Home & Garden">
                    <div class="category-overlay">
                        <h3 class="category-title">Home & Garden</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card feature-card border-0">
                    <div class="card-body">
                        <i class="fas fa-shipping-fast feature-icon"></i>
                        <h4>Fast Delivery</h4>
                        <p class="text-muted">Get your orders delivered quickly and safely to your doorstep.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card feature-card border-0">
                    <div class="card-body">
                        <i class="fas fa-shield-alt feature-icon"></i>
                        <h4>Secure Shopping</h4>
                        <p class="text-muted">Shop with confidence with our secure payment and data protection.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card feature-card border-0">
                    <div class="card-body">
                        <i class="fas fa-headset feature-icon"></i>
                        <h4>24/7 Support</h4>
                        <p class="text-muted">Our customer support team is always ready to help you.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="stat-card">
                    <div class="stat-number">10K+</div>
                    <div class="stat-label">Happy Customers</div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="stat-card">
                    <div class="stat-number">5K+</div>
                    <div class="stat-label">Products</div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="stat-card">
                    <div class="stat-number">50+</div>
                    <div class="stat-label">Categories</div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="stat-card">
                    <div class="stat-number">99%</div>
                    <div class="stat-label">Satisfaction</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<% if(products && products.length > 0) { %>
<section class="featured-products">
    <div class="container">
        <h2 class="section-title">Featured Products</h2>
        <div class="row">
            <% for(let i = 0; i < Math.min(6, products.length); i++) { 
                let product = products[i]; %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card product-card-landing">
                        <img src="<%=product.img%>" class="product-img-landing" alt="<%=product.name%>" onerror="this.src='https://images.unsplash.com/photo-1560472354-b33ff0c44a43?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80'">
                        <div class="card-body text-center">
                            <h5 class="card-title"><%=product.name%></h5>
                            <p class="text-success fw-bold fs-5">â‚¹<%=product.price%></p>
                            <a href="/product/<%=product._id%>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        <div class="text-center mt-5">
            <a href="/products" class="btn btn-outline-primary btn-lg">View All Products</a>
        </div>
    </div>
</section>
<% } %>

<!-- Call to Action Section -->
<section class="cta-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="mb-4">Ready to Start Shopping?</h2>
                <p class="fs-5 mb-4">Join thousands of satisfied customers and discover amazing deals every day.</p>
                <div class="d-flex flex-column flex-md-row gap-3 justify-content-center">
                    <% if(!currentUser) { %>
                        <a href="/register" class="btn btn-light btn-lg">Sign Up Now</a>
                        <a href="/login" class="btn btn-outline-light btn-lg">Login</a>
                    <% } else { %>
                        <a href="/products" class="btn btn-light btn-lg">Continue Shopping</a>
                        <a href="/user/cart" class="btn btn-outline-light btn-lg">View Cart</a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>
